<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="zeroli" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>startup.zeroli.model.User</class>
        <class>startup.zeroli.model.Product</class>
        <class>startup.zeroli.model.ProductReview</class>
        
        <properties>
            <!-- Cấu hình kết nối SQL Server -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:sqlserver://localhost:1433;databaseName=zeroli;
                             encrypt=true;trustServerCertificate=true;instanceName=SQLEXPRESS"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="123"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- Cấu hình tạo bảng -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>

            <!-- Cấu hình logging -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
